			function appendAltAttrForArtcImg() {
				var artcContent = document.getElementById('realArtcContents');
				var artcContentImgs = artcContent.getElementsByTagName('img');
				for (var idx=0; idx<artcContentImgs.length; idx++) {
					var img = artcContentImgs[idx];
					var alt = img.getAttribute("alt");
					if ( typeof alt == 'undefined' || alt == null || alt == "" ) {
						img.setAttribute("alt", "기사 이미지");
					}
				}
			}
			appendAltAttrForArtcImg();
			setFontSize(0);
		//]]>
		

